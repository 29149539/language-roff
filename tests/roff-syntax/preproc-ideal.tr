rect {
	var ne, nw, se, sw,
		wd, nt;
	
	nw = sw + (0,1) * ht;
	ne = nw + wd;
	se = sw + wd;
	conn ne to nw to sw to se to ne;
}


put rect {
	ht = 2;
	wd = 1;
	sw = 0;
};

put rect {
	ht = 2;
	wd = 0.5 * ht;
	nw = (0,2);
};


put rect {
	(nw + sw)/2 = (0,1);
	nw = (0,2);
	wd = 1;
}

put rect {
	sw = 0;
	wd = (1,1)/abs((1,1));
}

wd / abs(wd) = ht/abs(ht);



