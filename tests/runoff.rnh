.! SUMMARY OF RUNOFF COMMANDS
.fi .fill
.nf .nofill
.ad .adjust
.nj .nojust
.df .define format
	[name]
	[pos]         = LEFT | RIGHT | CENTER
	[field-def]…  = [type]([letter]…[letter])
		[type]    = L | R | C | F | J
.ef .end format
.fm .format
	[name]
.hy .hyphenate
	[word]…
.nh .nohyphen
.gl .glossary
	[word]        = \w+-\w+-\w+ (hy-phen-ate)
.hb .hyphenation break
	[number]
.la .layout
	[physical-left-margin]
	[physical-right-margin]
	[physical-top-line]
	[physical-bottom-line]
	[line-length]
	[line-origin]
.pl .page layout
	[top-margin]
	[bottom-margin]
	[tolerance]?
.ll .line layout
	[left-margin]
	[right-margin]
	[number-of-columns]
	[column-spaces]
.rm .reduce margin
	[left-margin]
	[right-margin]
.em .expand margin
	[left-margin]
	[right-margin]
.er .end reduction
.ps .paragraph spacing
	[lines]
.pi .paragraph indentation
	[spaces]
.pu .paragraph undentation
	[spaces]
.ce .center
.in .indent
	[spaces]
.un .undent
	[spaces]
.ma .margin
.he .header
	[name]
.hm .heading mode
	[param] = CENTER | MARGIN | FACING | OPPOSED
.pm .paging mode
	[param] =
		CENTER | MARGIN | FACING | TOP | BOTTOM | OFF |
		PREFIX "<string>" | SECTION "<string>" | SUFFIX "<string>"
.op .odd page
.pa .page
	[index]
.ej .eject
	[index]
.ss .single space
.ds .double space
.sp .space
	[number-of-blank-lines]
.fs .figure spacing
	[number-of-blank-lines]
.br .break
.bg .begin group
.eg .end group
.ul .underline
.li .literal
.es .escape
	[character]
.sh .shift
	[character]*
.tc .tab character
	[character]*
.dc .define command
	[name]
.ec .end command
.cl .call
	[name]
.ix .index
	[phrase]
	[phrase]

.! EXAMPLES
.layout 6, 89, 6, 66, 85, 0
.line layout 15, 75
.fill

.paging mode TOP MARGIN PREFIX "Page"
.paging mode SECTION "" SUFFIX ""
